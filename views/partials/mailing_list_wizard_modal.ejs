<div id="create-mailing-list-wizard-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <form id="create-mailing-list-form" action="/mailing/<%= project.id %>" method="post">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="wizard">
          <ul class="nav nav-wizard">
            <li>
              <a href="#step1">Mailing List Provider</a>
            </li>
            <li>
              <a href="">Details</a>
              <ul class="nav nav-wizard">
                <li>
                  <a href="#step2a">Mailing List Name</a>
                </li>
                <li>
                  <a href="#step2b">Subscribe Policy</a>
                </li>
                <li>
                  <a href="#step2c">Archive Policy</a>
                </li>
              </ul>
            </li>
            <li>
            <a href="#step3">Admin Credentials</a>
            </li>
          </ul>
          <div class="wizard-pane" id="step1">
            <h3>Mailing List Provider</h3>
            <div class="hr-divider-keyline"></div>
            <br>
            <div class="radio-inline custom-control custom-radio">
              <label>
                <input type="radio" name="mailing_list_type_radio" value="MM2" checked>
                <span class="custom-control-indicator"></span>
                Mailman 2
              </label>
            </div>
            <div class="radio-inline custom-control custom-radio">
              <label>
              <input type="radio" name="mailing_list_type_radio" value="MM3">
              <span class="custom-control-indicator"></span>
              Mailman 3
              </label>
            </div>
            <div class="radio-inline custom-control custom-radio">
              <label>
                <input type="radio" name="mailing_list_type_radio" value="GOOGLE_GROUPS">
                <span class="custom-control-indicator"></span>
                Google Groups
              </label>
            </div>
            <br><br>
            <div class="hr-divider-keyline"></div>
          </div>
          <div class="wizard-pane" id="step2a">
            <h3>Mailing List Name</h3>
            <br>
            <p>
              <input type="text" name="mailing_name" id="mailing_name" class="domain-project-edit" placeholder="Mailing List Title"
                data-validation="length alphanumeric"
                data-validation-length="3-12"
                data-validation-error-msg="Mailing List title has to be an alphanumeric value and no spaces (3-12 chars)">
            </p>
            <p>
              <h3>Mailing List Host</h3>
              <span name="mailing_host_span" id="mailing_host_span"></span>
              <input type="hidden" name="mailing_host" id="mailing_host" class="domain-project-edit" placeholder="Email and Url Host">
            </p>
          </div>
          <div class="wizard-pane" id="step2b">
            <h3>Subscribe Policy</h3>
            <div class="radio custom-control custom-radio" >
              <label>
                <input type="radio" name="subscribe_policy_radio" value="OPEN" checked>
                <span class="custom-control-indicator"></span>
                Open
              </label>
            </div>
            <div class="radio custom-control custom-radio" >
              <label>
                <input type="radio" name="subscribe_policy_radio" value="CONFIRM">
                <span class="custom-control-indicator"></span>
                Confirm
              </label>
            </div>
            <div class="radio custom-control custom-radio" >
              <label>
                <input type="radio" name="subscribe_policy_radio" value="APPROVAL">
                <span class="custom-control-indicator"></span>
                Approval
              </label>
            </div>
            <div class="radio custom-control custom-radio" >
              <label>
                <input type="radio" name="subscribe_policy_radio" value="CONFIRM_AND_APPROVAL">
                <span class="custom-control-indicator"></span>
                Confirm and Approval
              </label>
            </div>
            <div class="col-sm-12 ">
              <br>
              <div class="subscribe_policy_warning statcard statcard-danger p-a-md m-b">
                <h4 class="statcard-number">
                  Choosing this type of Subscribe Policy will not allow you to add participants from this web application.
                </h4>
              </div>
            </div>
            <br><br>
          </div>
          <div class="wizard-pane" id="step2c">
            <h3>Archive Policy</h3>
            <div class="radio-inline custom-control custom-radio">
              <label>
                <input type="radio" name="archive_policy_radio" value="PUBLIC">
                <span class="custom-control-indicator"></span>
                Public
              </label>
            </div>
            <div class="radio-inline custom-control custom-radio">
              <label>
                <input type="radio" name="archive_policy_radio" value="PRIVATE" checked>
                <span class="custom-control-indicator"></span>
                Private
              </label>
            </div>
          </div>
          <div class="wizard-pane" id="step3">
            <h3>Admin Credentials</h3>
            <br>
            <p>
            <span style="margin-left:12px;">Mailing List Admin</span>
            <input type="text" name="mailing_email_admin" id="mailing_email_admin" class="domain-project-edit" placeholder="admin@business.com"
              data-validation="email">
            </p>
            <p>
              <span style="margin-left:12px;">Mailing List Password</span>
              <input type="password" name="mailing_password_confirmation" id="mailing_password" class="domain-project-edit" placeholder="a_secret_password"
                data-validation="strength"
                data-validation-strength="1">
            </p>
            <p>
              <span style="margin-left:12px;">Repeat password</span>
              <input type="password" name="mailing_password" id="mailing_password" data-validation="confirmation" class="domain-project-edit" placeholder="Please confirm your password">
            </p>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>

<script src="/assets/dist/bootstrap-wizard.min.js"></script>
<script type="text/javascript">
  $(document).ready(function(){
    var url = "<%= project.url %>";
    var domain = url.replace('http://www.','').replace('https://www.','').replace('http://','').replace('https://','').split(/[/?#]/)[0];
    var listDomain = "lists." + domain;
    $('#mailing_host_span').text(listDomain);
    $('#mailing_host').val(listDomain);

    $(".subscribe_policy_warning").hide();

    $('input[name="subscribe_policy_radio"]').click(function(){
      if($(this).attr("value")!="OPEN") $(".subscribe_policy_warning").show();
      else $(".subscribe_policy_warning").hide();
    });
  });

  $(".wizard").bootstrapWizard({
    height: 500,
    progressBar: true
  });

  $(".wizard").on("submit.bw", function() {
      var form = document.getElementById('create-mailing-list-form')
      form.submit();
  });

</script>

<script src="/assets/dist/jquery.form-validator.min.js"></script>
<script>
  $.validate({
    modules : 'security'
  });
</script>
