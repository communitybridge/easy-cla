<div id="create-mailing-list-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog">
    <form class="" action="/mailing/<%= project.id %>" method="post">
      <div class="modal-content">
        <div class="modal-header-listing">
          <button type="button" class="close-modal" data-dismiss="modal" style="color: #fff;" aria-label="Close"><span aria-hidden="true" style="color:#fff">X</span></button>
          <div class="modal-title-mailing">
            <span id="myModalLabel">Create a Mailing List for <%= project.name %> </span>
          </div>
        </div>
        <div class="modal-subheader-listing">
          <div class="modal-subheader-title">
            <span style="color:#11ABDE">| </span>
            <input type="text" name="mailing_name" id="mailing_name" placeholder="Add New Mailing List Title"class="modal-subheader-title-input">
          </div>
        </div>
        <div class="modal-body-mailing">
          <input type="hidden" name="project_id" id="project_id"  value="">
          <br>
          <div class="">
            <span style="margin-left: 30px;">List Type:</span>
            <div class="radio-inline custom-control custom-radio" >
              <label>
                <input type="radio" id="radio_public_list" value="PUBLIC" name="list_type_radio">
                <span class="custom-control-indicator"></span>
                Public
              </label>
            </div>
            <div class="radio-inline custom-control custom-radio" >
              <label>
                <input type="radio" id="radio_private_list" name="list_type_radio" value="PRIVATE" checked>
                <span class="custom-control-indicator"></span>
                Private
              </label>
            </div>
            <span style="margin-left: 30px;">Membership Access:</span>
            <div class="radio-inline custom-control custom-radio">
              <label>
                <input type="radio" id="radio_public_membership" value="PUBLIC" name="membership_type_radio">
                <span class="custom-control-indicator"></span>
                Public
              </label>
            </div>
            <div class="radio-inline custom-control custom-radio">
              <label>
                <input type="radio" id="radio_approval_membership" value="APPROVAL" name="membership_type_radio" checked>
                <span class="custom-control-indicator"></span>
                Approval
              </label>
            </div>
          </div>
          <div class="modal-body-mailing-list-admin">
            <br>
            <span style="margin-left:12px;">Mailing List Admin</span>
            <input type="text" name="mailing_email_admin" id="mailing_email_admin" class="domain-project-edit" placeholder="admin@business.com">
            <!-- <input type="text" name="name" class="domain-project-edit" placeholder="(default) firstname.lastname@business.com,"> -->
            <br><br>
            <span style="margin-left:12px;">Mailing List Password</span>
            <input type="password" name="mailing_password" id="mailing_password" class="domain-project-edit" placeholder="a_secret_password">
          </div>

